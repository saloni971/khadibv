<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #dcd9d9;
        }
        .header {
            background-color: #007bff;
            color: white;
            padding: 25px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }
        .container {
            width: 50%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .sidebar {
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
            border-bottom: 2px solid #555;
        }
        .sidebar button {
            background: none;
            border: none;
            padding: 10px;
            text-align: left;
            font-size: 16px;
            cursor: pointer;
            
            width: 100%;
        }
        .sidebar button:hover {
            background-color: #ddd;
        }
        .content {
            display: none;
            margin-top: 10px;
        }
        .input-group {
            margin-bottom: 10px;
        }
        .input-group label {
            display: block;
            margin-bottom: 10px;
            margin-top: 10px;
        }
        .input-group input {
            width: 95%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            
        }
        .gender-group {
            display: flex;
            align-items: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 5px;
            background: #fff;
            gap: 20px;
            width: 97%;
        }
        .gender-group label {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 16px;
        }
        .submit-btn {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
            
        }
        .submit-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="header">Khadi Shopping Website</div>
    <div class="container">
        <div class="sidebar">
            <button onclick="showSection('editProfile')">
                <i class="fas fa-user"></i> Profile
            </button>
            <button onclick="showSection('editAddress')">
                <i class="fas fa-map-marker-alt"></i> Address
            </button>
            <a href="help-center.html">
                <button><i class="fas fa-question-circle"></i> Help</button>
            </a>
        </div>
        
        
        <!-- Edit Profile Section -->
        <div id="editProfile" class="content">
            <form onsubmit="saveProfile(event)">
                <h3>Edit Personal Information</h3>
                <div class="input-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" placeholder="Enter your name">
                </div>
                <div class="input-group">
                    <label>Gender:</label>
                    <div class="gender-group">
                        <label><input type="radio" name="gender" value="male"> Male</label>
                        <label><input type="radio" name="gender" value="female"> Female</label>
                    </div>
                </div>
                <div class="input-group">
                    <label for="email">Email ID:</label>
                    <input type="email" id="email" placeholder="Enter your email">
                </div>
                <div class="input-group">
                    <label for="mobile">Mobile Number:</label>
                    <input type="text" id="mobile" placeholder="Enter your number">
                </div>
                <button type="submit" class="submit-btn">Save Information</button>
            </form>
        </div>
        
        <!-- Edit Shipping Address Section -->
        <div id="editAddress" class="content">
            <form onsubmit="saveAddress(event)">
                <h3>Edit Shipping Address</h3>
                <div class="input-group">
                    <label for="address">Address:</label>
                    <input type="text" id="address" placeholder="Enter your address">
                </div>
                <div class="input-group">
                    <label for="city">City:</label>
                    <input type="text" id="city" placeholder="Enter your city">
                </div>
                <div class="input-group">
                    <label for="state">State:</label>
                    <input type="text" id="state" placeholder="Enter your state">
                </div>
                <div class="input-group">
                    <label for="pincode">Pincode:</label>
                    <input type="text" id="pincode" placeholder="Enter your pincode">
                </div>
                <button type="submit" class="submit-btn">Save Address</button>
            </form>
        </div>
    </div>
    
    <script>
                function showSection(sectionId) {
            let sections = document.querySelectorAll(".content");
            sections.forEach(section => section.style.display = "none");
            document.getElementById(sectionId).style.display = "block";
        }

        function saveProfile(event) {
            event.preventDefault(); 

            let name = document.getElementById("name").value.trim();
            let email = document.getElementById("email").value.trim();
            let mobile = document.getElementById("mobile").value.trim();
            let genderSelected = document.querySelector("input[name='gender']:checked");

            if (!name || !email || !mobile || !genderSelected) {
                alert("Please enter valid details!");
                return;
            }

            alert("Personal information saved successfully!");
        }

        function saveAddress(event) {
            event.preventDefault(); 

            let address = document.getElementById("address").value.trim();
            let city = document.getElementById("city").value.trim();
            let state = document.getElementById("state").value.trim();
            let pincode = document.getElementById("pincode").value.trim();

            if (!address || !city || !state || !pincode) {
                alert("Please enter valid address details!");
                return;
            }

            alert("Address saved successfully!");
        }
        
    </script>
</body>
</html>